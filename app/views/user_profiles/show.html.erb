<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user_profile.name %>
</p>

<p>
  <strong>Photo url:</strong>
  <%= @user_profile.photo_url %>
</p>

<p>
  <strong>Balance:</strong>
  <%= @user_profile.balance %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo url</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.email %></td>
        <td><%= user_profile.name %></td>
        <td><%= user_profile.photo_url %></td>
        <td><%= user_profile.balance %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit', edit_user_profile_path(@user_profile) %> |
