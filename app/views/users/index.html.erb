<h1>Choose Someone to Bet</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Photo url</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.photo_url %></td>
        <td><%= user.balance %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <p>
    <a href="/home/index"> Home</a>
  </p>

    <p>
      <a href="/users/<%= current_user.id %>">My Profile</a>
  </p>
